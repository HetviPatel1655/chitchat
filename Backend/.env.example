# Database Configuration
# The DB_URL should include the database name (e.g., ...mongodb.net/MessagingApp)
DB_URL=mongodb+srv://<username>:<password>@cluster0.gvpxmqb.mongodb.net/MessagingApp?retryWrites=true&w=majority
DB_NAME=MessagingApp

# JWT Configuration (For secure authentication)
JWT_SECRET=your_long_random_string_here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=production
FRONTEND_URL=https://chitchat-vert-alpha.vercel.app

# AES Encryption Key (Must be 32 bytes/base64 encoded for your message encryption)
AES_KEY=your_base64_encryption_key_here

# Cloudinary Configuration (For file uploads)
# Sign up at https://cloudinary.com/ to get these credentials
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
